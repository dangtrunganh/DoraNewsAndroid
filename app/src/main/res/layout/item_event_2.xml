<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="18dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/image_event_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:padding="8dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/text_title_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="2dp"
        android:maxLines="3"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_some_content_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="5dp"
        android:maxLines="3"
        android:text="Những ngày qua, thông tin về việc Đà Lạt công bố bản “Quy hoạch chi tiết và thiết kế đô thị, tỷ lệ 1/500 khu vực trung tâm Hòa Bình, thành phố Đà Lạt, tỉnh Lâm Đồng” nhận được nhiều phản ứng từ những người yêu vẻ bình yên của thành phố này và gây tranh cãi trong giới chuyên môn nghiên cứu, quy hoạch, kiến trúc đô thị."
        android:textSize="17sp" />

    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        >
        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/image_play_event"
            android:gravity="left|center_vertical"
            >
            <TextView
                android:id="@+id/text_category_event_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/color_black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text=" - "
                android:textColor="@color/color_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_time_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/color_black"
                android:textSize="14sp" />

        </TableRow>

        <ImageView
            android:id="@+id/image_play_event"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_play_arrow_black_24dp" />

    </android.support.constraint.ConstraintLayout>
    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#d9dede"
        />
</LinearLayout>