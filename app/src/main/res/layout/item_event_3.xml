<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/rlt_event_3"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_event_cover_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_cover_event" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4D000000" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    app:layout_constraintBottom_toTopOf="@id/table_row_event_3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/text_some_content_event_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="5dp"
                        android:maxLines="4"
                        android:paddingBottom="5dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:text="Ngày 23/3, Ủy ban Nhân dân Tp. Hồ Chí Minh tổ chức Hội nghị gặp gỡ giữa lãnh đạo thành phố và doanh nghiệp có vốn đầu tư nước ngoài (FDI) năm 2019 với chủ đề “Thành phố Hồ Chí Minh: Hội tụ nguồn lực, kiến tạo tương."
                        android:textColor="#fff"
                        android:textSize="16sp" />

                </FrameLayout>

                <TableRow
                    android:id="@+id/table_row_event_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    app:layout_constraintBottom_toTopOf="@id/text_title_event_3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <TextView
                        android:id="@+id/text_category_event_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Báo Mới"
                        android:textAllCaps="true"
                        android:textColor="@color/color_white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text=" - "
                        android:textColor="@color/color_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_time_event_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="6 bài báo - 5 giờ trước"
                        android:textColor="@color/color_white"
                        android:textSize="14sp" />

                </TableRow>

                <TextView
                    android:id="@+id/text_title_event_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="8dp"
                    android:maxLines="3"
                    android:paddingBottom="10dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="Những ngày qua, thông tin về việc Đà Lạt công bố bản “Quy hoạch chi tiết và thiết kế đô thị, tỷ lệ 1/500 khu vực trung tâm Hòa Bình"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>


            <LinearLayout
                android:id="@+id/lnl_view_event_3"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rlt_event_3">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="14dp"
                    app:srcCompat="@drawable/ic_library_books" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Xem thông toàn cảnh"
                    android:textColor="#007aff"
                    android:fontFamily="@font/sf_pro_display_semibold_snake"
                    android:textSize="18sp" />
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>





